<?xml version='1.0' encoding='utf-8'?>
<widget id="com.spotlight.retail" version="1.0.7" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Spotlightmart</name>
    <description>
        An mobile app for the Spotlightmart to help customer to check status, automate checkout, etc
    </description>
    <author email="daniel@spotlightmart.com" href="http://spotlightmart.com">
        Sportlight technical team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="AndroidLaunchMode" value="singleTask" />
    <engine name="browser" spec="^4.1.0" />
    <engine name="ios" spec="^4.5.0" />
    <plugin name="cordova-plugin-actionsheet" spec="^2.3.3" />
    <plugin name="cordova-plugin-camera" spec="^2.4.1">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="Spotlightmart" />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="Spotlightmart" />
    </plugin>
    <plugin name="cordova-plugin-console" spec="git+https://github.com/apache/cordova-plugin-console.git" />
    <plugin name="cordova-plugin-customurlscheme" spec="^4.3.0">
        <variable name="URL_SCHEME" value="com.spotlight.retail" />
    </plugin>
    <plugin name="cordova-plugin-dialogs" spec="^1.3.3" />
    <plugin name="cordova-plugin-file" spec="^4.3.3" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.1" />
    <plugin name="cordova-plugin-listpicker" spec="^2.2.2" />
    <plugin name="cordova-plugin-safariviewcontroller" spec="^1.4.7" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
