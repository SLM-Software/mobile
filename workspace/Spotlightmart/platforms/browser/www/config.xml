<?xml version='1.0' encoding='utf-8'?>
<widget id="com.spotlight.retail" version="1.0.7" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <name>Spotlightmart</name>
    <description>
        An mobile app for the Spotlightmart to help customer to check status, automate checkout, etc
    </description>
    <author email="daniel@spotlightmart.com" href="http://spotlightmart.com">
        Sportlight technical team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="AndroidLaunchMode" value="singleTask" />
</widget>
